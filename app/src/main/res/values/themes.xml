<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.EyojTFCase" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/eyoj_green</item>
        <item name="colorPrimaryVariant">@color/eyoj_green_darker</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">?colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EyojTFCase" parent="Base.Theme.EyojTFCase" />

    <style name="ShapeAppearanceOverlay.App.CardView.TopCorners" parent="">
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
    </style>

    <style name="Widget.App.TextInputLayout.Filled.White" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusTopStart">@dimen/product_search_input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/product_search_input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/product_search_input_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/product_search_input_corner_radius</item>
        <item name="hintTextColor">@android:color/darker_gray</item>
    </style>

    <dimen name="product_search_input_corner_radius">6dp</dimen>
</resources>